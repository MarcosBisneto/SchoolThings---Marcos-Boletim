<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/fundo_simples_claro"
    tools:context="com.app.boletim.Activities.CadastroAnotacoesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar uma Anotação"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_anotacao"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Escreva algo"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_salvar_anotacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="@string/salvar"
            android:layout_marginStart="50dp"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_cancelar_anotacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_marginStart="50dp"
            android:text="@string/cancelar"
            android:textColor="#fff" />


    </LinearLayout>


</LinearLayout>
